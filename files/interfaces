auto vmbr1
iface vmbr1 inet static
    address  10.0.0.1
    netmask  32
    bridge-ports enp3s0.1
    bridge-stp off
    bridge-fd 0
    bridge-vlan-aware yes
    bridge-vids 2-4094
    post-up echo 1 > /proc/sys/net/ipv4/ip_forward
    post-up echo 1 > /proc/sys/net/ipv4/conf/enp3s0.1/proxy_arp
    post-up ip r a 10.0.0.100 dev vmbr1
    post-up ip r a 10.0.0.0/24 dev vmbr1
    post-up ip r a 10.0.0.0/16 via 10.0.0.100 dev vmbr1
